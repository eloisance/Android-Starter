<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <item name="colorAccent">@color/ColorAccent</item>
        <item name="android:listDivider">@color/ColorDivider</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/ColorPrimaryDark</item>
    </style>

    <style name="EditTextLoginStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/White</item>
        <item name="colorControlActivated">@color/White</item>
        <item name="colorControlHighlight">@color/White</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/ColorDivider</item>
        <item name="colorControlActivated">@color/ColorDivider</item>
        <item name="colorControlHighlight">@color/ColorDivider</item>
    </style>

</resources>
